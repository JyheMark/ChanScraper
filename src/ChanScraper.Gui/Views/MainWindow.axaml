<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChanScraper.Gui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ChanScraper.Gui.Views"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="ChanScraper.Gui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/chan.ico"
        Title="ChanScraper"
        Width="500"
        SizeToContent="Height"
        CanResize="False">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Border Padding="10">
        <StackPanel>
            <TextBox Watermark="Download Directory"
                     IsReadOnly="True"
                     Text="{Binding DownloadDirectory}"/>
            <StackPanel Name="pnl_ScrapeThreadAppend"
                        Margin="0 15 0 0"
                        Spacing="20">
            </StackPanel>
            <Button HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Margin="0 25 0 0"
                    Width="30"
                    Name="btn_AddScraper"
                    Click="Btn_AddScraper_OnClick">+</Button>
        </StackPanel>
    </Border>
</Window>